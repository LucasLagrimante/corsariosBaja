<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="corsariosBajaPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <non-jta-data-source>corsariosBaja</non-jta-data-source>
    <class>model.Arquitetura</class>
    <class>model.Automovel</class>
    <class>model.Avaliacao</class>
    <class>model.Competicao</class>
    <class>model.Desempenho</class>
    <class>model.Desempenhoteste</class>
    <class>model.Design</class>
    <class>model.Frequencia</class>
    <class>model.Integrante</class>
    <class>model.Investidor</class>
    <class>model.Peca</class>
    <class>model.Pessoa</class>
    <class>model.Professor</class>
    <class>model.Tipopeca</class>
    <class>model.Tipopista</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/corsariosBaja"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
